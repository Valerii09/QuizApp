<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Состояние кнопки, когда она нажата -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Цвет фона при нажатии -->
            <corners android:radius="8dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

    <!-- Состояние кнопки, когда она в фокусе (например, при использовании клавиши Tab) -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FF5722" /> <!-- Цвет фона при фокусе -->
            <corners android:radius="8dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

    <!-- Обычное состояние кнопки (когда она не в фокусе и не нажата) -->
    <item>
        <shape>
            <solid android:color="#FF7043" /> <!-- Цвет фона в обычном состоянии -->
            <corners android:radius="8dp" /> <!-- Закругленные углы -->
        </shape>
    </item>

</selector>
